@model Web.Razor.EmailTemplates.UsernameResetModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Username Reset</title>
    <style>:root{--em-bg:#0f2217;--em-surface:#1a2f21;--em-surface-alt:#26452f;--em-border:#2e5b3c;--em-accent:#ffa000;--em-accent-deep:#df7f0a;--em-accent-soft:#d1dd61;--em-text:#ecf7e9;--em-text-invert:#1d2b1f;--em-text-dim:#b4c9b7;--em-btn-shadow:0 4px 14px -6px rgba(0,0,0,.55),0 0 0 1px #b5f73d;}@@media (prefers-color-scheme:light){:root{--em-bg:#f4f7e7;--em-surface:#ffffff;--em-surface-alt:#e9f0d9;--em-border:#cbd8b1;--em-text:#27341e;--em-text-dim:#536744;--em-btn-shadow:0 4px 14px -6px rgba(0,0,0,.18),0 0 0 1px #ffa000;}}body{font-family:Arial,sans-serif;background:var(--em-bg);margin:0;padding:0;font-weight:bold;color:var(--em-text);} .container{max-width:600px;margin:0 auto;color:var(--em-text);background:var(--em-surface);border-radius:8px;border:1px solid var(--em-border);box-shadow:0 4px 18px -6px rgba(0,0,0,.55),0 0 0 1px rgba(255,255,255,.02);overflow:hidden;} .header{background:linear-gradient(145deg,var(--em-surface-alt),#1d3725 55%,#15281c);color:var(--em-accent-soft);padding:20px;text-align:center;border-bottom:4px solid var(--em-accent);} .header h1{margin:0;} .content{padding:20px;} .content p{line-height:1.6;margin:0 0 14px;} .button{display:block;width:200px;margin:20px auto;padding:12px 20px;background-image:linear-gradient(160deg,var(--em-accent-soft) 0%,var(--em-accent) 60%,var(--em-accent-deep) 100%);color:var(--em-text-invert);text-align:center;text-decoration:none;border-radius:999px;font-weight:600;letter-spacing:.5px;box-shadow:var(--em-btn-shadow);transition:background .3s ease,transform .3s ease;} .footer{background:var(--em-surface-alt);color:var(--em-text-dim);text-align:center;padding:14px 10px;font-size:12px;border-top:1px solid var(--em-border);} </style>
</head>
<body style="background:#0f2217;margin:0;padding:0;">
    <div style="display:none;font-size:0;line-height:0;max-height:0;mso-hide:all;">Username reset request for @Model.SiteName. If you did not request this you can ignore this email.</div>
    <div class="container" style="background:#1a2f21;color:#ecf7e9;border:1px solid #2e5b3c;">
        <div class="header">
            <h1>Username Reset Request</h1>
        </div>
        <div class="content">
            <p>Hello @Model.Email,</p>
            <p>We received a request to reset your username. Click the button below to reset it.</p>
            <p>If you did not request a username reset, please ignore this email or contact support if you have questions.</p>
            <p>Thank you,<br>@Model.SiteName</p>
            <a href="@Model.ResetLink" class="button" style="background-image:linear-gradient(160deg,#d1dd61 0%,#ffa000 60%,#df7f0a 100%);color:#1d2b1f;">Reset Username</a>
        </div>
    <div class="footer" style="background:#26452f;color:#b4c9b7;border-top:1px solid #2e5b3c;">
            <p>With love, from the team at @Model.SiteName! ❤️</p>
        </div>
    </div>
</body>
</html>