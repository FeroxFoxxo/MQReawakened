@page "/"
@using Web.Razor.Pages
@model IndexModel

@{
	ViewData["Title"] = "Home Page";
}

<section class="hero fade-in">
    <div class="mq-container hero-content">
		<h1 class="t-display">Relive the memory of Ook in <span class="text-gradient-amber">@Model.ServerName</span></h1>
		<p class="t-lead" style="max-width:800px;">Embark on a legendary journey across the world of Ook. Complete quests, fight monsters, and fend off Ka's shadow army once again!</p>
		<div class="hero-stats" role="group" aria-label="Server statistics">
			<div class="stat-pill" aria-live="polite">Online: <strong>@Model.PlayerCount</strong></div>
			<div class="stat-pill">Registered: <strong>@Model.AccountCount</strong></div>
		</div>
		<div class="mt-space">
			<a href="/en/signup" class="btn-modern btn-accent fx-pop" style="font-size:.95rem; padding:16px 34px;">Join the Adventure</a>
		</div>
	</div>
</section>

<section class="mq-container mt-space">
	<div class="ui-card card-gradient-border flow">
		<div class="ui-card-header">What Awaits You</div>
		<div class="grid-auto">
			<div class="feature-card">
				<h5>Uncover the Mysteries of Ook</h5>
				<p>Explore ancient paths and solve the Monkey King's secrets across lush jungle realms.</p>
			</div>
			<div class="feature-card">
				<h5>Gear Up Your Monkey</h5>
				<p>Defeat shadow creatures to forge and discover powerful equipment and relics.</p>
			</div>
			<div class="feature-card">
				<h5>Quest With Friends</h5>
				<p>Join a tribe and band together to complete challenges and defend the wilds.</p>
			</div>
		</div>
		<div class="center">
			<a href="/download" class="btn-modern btn-amber" style="padding:14px 30px; font-size:.85rem;">Download Launcher</a>
		</div>
	</div>
</section>
