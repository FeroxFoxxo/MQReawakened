@page
@model Web.Razor.Pages.Account.AccessDeniedModel

@{
    ViewData["Title"] = "Access Denied";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel {
        Title = "Access Denied",
        Description = "You don't have permission to view this resource or complete that action.",
        Center = true,
        AdditionalClasses = "panel-p-xl panel-variant-warn"
    })
        <img class="site_logo" src="/_content/Web.Razor/logo.png" alt="Site Logo" style="max-width:130px;" data-reveal />
        <div class="action-row mt-1_5" data-reveal>
            <a href="/" class="btn-modern btn-accent btn-pad-md">Return Home</a>
            <a href="/en/signup" class="btn-modern btn-pad-md">Sign In</a>
        </div>
    </div>
</section>