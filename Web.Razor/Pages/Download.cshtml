@page
@model Web.Razor.Pages.DownloadModel

@{
    ViewData["Title"] = "Download";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Starting Download", Description = "Thanks for downloading " + (string)ViewData["ServerName"] + ". Your adventure into the land of Ook begins soon.", CenterHeader = true, AdditionalClasses = "panel-p-lg flow" })
        <p id="downloadMessage" class="stat-pill" style="display:none; margin-top:.75rem;" data-reveal>Your file is being downloaded...</p>
        <div class="action-row mt-1_25" data-reveal>
            <a href="/StartDownload" class="btn-modern btn-accent btn-form">If it doesn't start, click here</a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        window.onload = function () {
            window.location.href = '/StartDownload';
        };
    </script>
}
