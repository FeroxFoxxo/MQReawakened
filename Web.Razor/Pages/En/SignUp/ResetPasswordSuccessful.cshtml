@page
@model Web.Razor.Pages.En.SignUp.ResetPasswordSuccessfulModel

@{
    ViewData["Title"] = "Successful password reset";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Password Reset!", Description = "Your password has been successfully updated. You can now sign in and continue your journey.", CenterHeader = true, AdditionalClasses = "panel-p-lg panel-variant-success flow" })
        <img class="site_logo" src="/_content/Web.Razor/logo.png" alt="Site Logo" style="max-width:120px;" data-reveal />
        <div class="action-row mt-1_5" data-reveal>
            <a href="/en/signup" class="btn-modern btn-accent btn-pad-md">Return to Sign In</a>
            <a href="/download" class="btn-modern btn-outline-jungle btn-pad-md">Download Launcher</a>
        </div>
    </div>
</section>