@page
@model Web.Razor.Pages.En.SignUp.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Reset Password", Description = "Enter and confirm your new password below.", AdditionalClasses = "panel-p-lg flow" })
        <div data-reveal>
            <form asp-action="ResetPassword" method="post" class="form-modern" novalidate>
                <div class="field">
                    <label asp-for="Password"></label>
                    <div class="input-shell">
                        <input asp-for="Password" placeholder="New Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="field">
                    <label asp-for="ConfirmPassword"></label>
                    <div class="input-shell">
                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="field" style="margin-top:4px;">
                    <button type="submit" class="btn-modern btn-accent btn-form">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</section>
