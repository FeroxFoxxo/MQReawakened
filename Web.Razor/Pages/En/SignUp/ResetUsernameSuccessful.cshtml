@page
@model Web.Razor.Pages.En.SignUp.ResetUsernameSuccessfulModel

@{
    ViewData["Title"] = "Successful username reset";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Username Sent", Description = "Your username has been sent to your email.", CenterHeader = true, AdditionalClasses = "panel-p-lg panel-variant-success flow" })
