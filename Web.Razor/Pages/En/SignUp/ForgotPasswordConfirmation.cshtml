@page
@model Web.Razor.Pages.En.SignUp.ForgotPasswordConfirmationModel

@{
    ViewData["Title"] = "Successful Password Reset";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "If Account Exists…", Description = "If a matching account was found, a password reset email has been sent.", CenterHeader = true, AdditionalClasses = "panel-p-lg flow" })
        <img class="site_logo" src="/_content/Web.Razor/logo.png" alt="Site Logo" style="max-width:120px;" data-reveal />
        <div class="action-row mt-1_5" data-reveal>
            <a href="/en/signup" class="btn-modern btn-accent btn-pad-md">Return</a>
        </div>
    </div>
</section>