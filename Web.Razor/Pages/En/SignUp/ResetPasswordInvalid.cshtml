@page
@model Web.Razor.Pages.En.SignUp.ResetPasswordInvalidModel

@{
    ViewData["Title"] = "Invalid Password Reset";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Invalid Reset Link", Description = "The password reset URL is invalid or expired. Please request a new link.", Center = true, AdditionalClasses = "panel-p-xl panel-variant-warn" })
        <img class="site_logo" src="/_content/Web.Razor/logo.png" alt="Site Logo" style="max-width:120px;" data-reveal />
        <div class="action-row mt-1_5" data-reveal>
            <a href="/en/signup/forgot-password" class="btn-modern btn-amber btn-pad-md">Request New Link</a>
        </div>
    </div>
</section>