@page
@model Web.Razor.Pages.En.SignUp.Forgot_PasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Forgot Password", Description = "Enter your username and we'll send a reset link if it exists.", AdditionalClasses = "panel-p-lg flow" })
        <div class="row">
            <div class="col-lg-12" data-reveal>
                <form asp-action="Forgot-Password" method="post" class="form-modern" novalidate>
                    <div class="field">
                        <label asp-for="Username"></label>
                        <div class="input-shell">
                            <input asp-for="Username" placeholder="Monkey_King" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="field" style="margin-top:4px;">
                        <button type="submit" class="btn-modern btn-accent btn-form">Send Reset Link</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
