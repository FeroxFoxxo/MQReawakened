@page
@model Web.Razor.Pages.En.SignUp.Forgot_UsernameModel

@{
    ViewData["Title"] = "Forgot Username";
}

<section class="mq-container mt-space fade-in">
    @await Html.PartialAsync("_PanelShell", new Web.Razor.Pages.Shared.PanelShellModel { Title = "Forgot Username", Description = "Enter your email and we'll send your username if it exists.", Center = false })
        <div class="row">
            <div class="col-lg-5 d-flex flex-column align-items-center justify-content-center mb-4 mb-lg-0 center" data-reveal>
                <img class="site_logo" src="/_content/Web.Razor/logo.png" alt="Site Logo" style="max-width:130px;" />
            </div>
            <div class="col-lg-7" data-reveal>
                <form asp-action="ForgotUsername" method="post" class="form-modern" novalidate>
                    <div class="field">
                        <label asp-for="Email"></label>
                        <div class="input-shell">
                            <input asp-for="Email" placeholder="info@mailaddress.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="field" style="margin-top:4px;">
                        <button type="submit" class="btn-modern btn-accent" style="width:100%; padding:14px 0;">Send Username</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
