@page
@model Web.Razor.Pages.En.NewsModel

@{
    ViewData["Title"] = "News";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card signup-card">
        <div class="row g-0">
            <div class="col-md-6 info-container">
                <img class="site_logo rounded-circle" src="/_content/Web.Razor/logo.png" alt="Site Logo" />
                <p class="description">@ViewData["ServerName"] News</p>
                <h3 class="text-warning">Hear all about us here!</h3>
            </div>
            <div class="col-md-6 form-container">
                <br />
                <h3>
                    Newest News:
                </h3>
                <p>
                    @NewsModel.News
                </p>
            </div>
        </div>
    </div>
</div>
